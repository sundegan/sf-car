/**index.wxss**/
page {
  width: 100%;
  height: 100%;
}

/* 控制首页地图铺满屏幕 */
#map {
  width: 100%;
  height: 100%;
}

/* 定位图标、用户图标样式调整 */
.icon-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 110rpx;
  margin-top: 40rpx;
  height: 155rpx;
}

/* 图标宽度和高度 */
.icon-container cover-image {
  width: 65rpx;
  height: 65rpx;
}

/* 扫码租车控件样式 */
.scanQRcodes-container {
  width: 500rpx;
  height: 75rpx;
  margin-left: 125rpx;
  bottom: 10%;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: .7;
}